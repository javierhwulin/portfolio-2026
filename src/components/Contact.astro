<section id="contact" class="section-container contact-section">
  <div class="contact-wrapper">
    <div class="contact-content">
      <span class="section-label">(Contact)</span>
      <h2 class="contact-heading">
        Let's Build<br />
        <span class="accent-text">Something Great</span>
      </h2>
      <p class="contact-description">
        Got a project in mind or just want to chat about tech? I'm always
        excited to connect with fellow developers, designers, and creators.
        Let's make something amazing together.
      </p>

      <div class="contact-cta">
        <a href="mailto:javier.hwulin.devtech@gmail.com" class="primary-btn">
          <span>Send me an email</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>

        <div class="social-links">
          {
            socialLinks.map((link) => (
              <a
                href={link.url}
                target={link.url.startsWith("mailto") ? undefined : "_blank"}
                rel={link.url.startsWith("mailto") ? undefined : "noopener noreferrer"}
                class="social-link"
                aria-label={link.name}
              >
                <Fragment set:html={link.icon} />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <div class="contact-visual">
      <div class="orbit-container">
        <div class="orbit orbit-1"></div>
        <div class="orbit orbit-2"></div>
        <div class="orbit orbit-3"></div>
        <div class="center-dot"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    padding-top: 6rem;
    padding-bottom: 6rem;
  }

  .contact-wrapper {
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: 2rem;
    padding: 3rem;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 1024px) {
    .contact-wrapper {
      grid-template-columns: 1.3fr 1fr;
      padding: 4rem;
    }
  }

  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-accent);
    margin-bottom: 1.5rem;
  }

  .contact-heading {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    color: white;
    margin-bottom: 1.5rem;
  }

  .accent-text {
    color: var(--color-accent);
  }

  .contact-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.75);
    max-width: 28rem;
    margin-bottom: 2.5rem;
  }

  .contact-cta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.5rem;
  }

  .primary-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-accent);
    color: var(--color-bg);
    padding: 1rem 1.75rem;
    border-radius: 3rem;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .primary-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 233, 177, 0.25);
  }

  .primary-btn svg {
    transition: transform 0.2s ease;
  }

  .primary-btn:hover svg {
    transform: translateX(4px);
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-accent);
    color: var(--color-accent);
    transform: translateY(-3px);
  }

  /* Decorative Visual */
  .contact-visual {
    display: none;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .contact-visual {
      display: flex;
    }
  }

  .orbit-container {
    position: relative;
    width: 280px;
    height: 280px;
  }

  .orbit {
    position: absolute;
    border-radius: 50%;
    border: 1px solid rgba(255, 233, 177, 0.15);
    animation: spin 20s linear infinite;
  }

  .orbit::before {
    content: "";
    position: absolute;
    width: 10px;
    height: 10px;
    background: var(--color-accent);
    border-radius: 50%;
    top: 0;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    box-shadow: 0 0 20px rgba(255, 233, 177, 0.5);
  }

  .orbit-1 {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    animation-duration: 15s;
  }

  .orbit-2 {
    width: 70%;
    height: 70%;
    top: 15%;
    left: 15%;
    animation-duration: 12s;
    animation-direction: reverse;
  }

  .orbit-2::before {
    width: 8px;
    height: 8px;
    background: rgba(255, 233, 177, 0.7);
  }

  .orbit-3 {
    width: 40%;
    height: 40%;
    top: 30%;
    left: 30%;
    animation-duration: 8s;
  }

  .orbit-3::before {
    width: 6px;
    height: 6px;
    background: rgba(255, 233, 177, 0.5);
  }

  .center-dot {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 16px;
    height: 16px;
    background: var(--color-accent);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    box-shadow: 0 0 30px rgba(255, 233, 177, 0.6);
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 768px) {
    .contact-section {
      padding-top: 4rem;
      padding-bottom: 4rem;
    }

    .contact-wrapper {
      padding: 2rem;
    }

    .contact-cta {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.25rem;
    }

    .primary-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
