---
interface Service {
  number: string;
  title: string;
  description: string;
  highlights: string[];
}

const services: Service[] = [
  {
    number: "01",
    title: "Full-Stack Development",
    description:
      "From frontend interactions to backend APIs, I build complete web solutions that are scalable, maintainable, and ready for real-world users.",
    highlights: ["Vue / Astro / React", "REST & GraphQL APIs", "Performance Optimization"],
  },
  {
    number: "02",
    title: "Backend Engineering",
    description:
      "I design and build robust APIs and data layers optimized for performance, security, and maintainability.",
    highlights: ["SpringBoot / Django / FastAPI", "PostgreSQL / MongoDB / Redis", "Microservices Architecture"],
  },
  {
    number: "03",
    title: "DevOps & Cloud",
    description:
      "I containerize, deploy, and automate delivery using modern cloud and CI/CD tooling for reliable, scalable infrastructure.",
    highlights: ["Docker & Kubernetes", "GCP / Terraform", "CI/CD Pipelines"],
  },
];
---

<section id="about" class="section-container about-section">
  <!-- Personal Introduction -->
  <div class="intro-block">
    <div class="intro-content">
      <span class="section-label">(About)</span>
      <h2 class="intro-heading">
        Crafting Digital<br />
        <span class="accent-text">Experiences</span>
      </h2>
      <p class="intro-text">
        I'm a software engineer driven by a passion for turning ideas into
        clean, intuitive digital experiences. With expertise spanning frontend
        to backend, I help teams build products that users love.
      </p>
      <p class="intro-text-secondary">
        Beyond coding, I thrive in collaborative environments and enjoy tackling
        challenging problems with creative solutions. I aim to contribute to
        impactful projects that make a real difference.
      </p>
    </div>
    <div class="intro-visual">
      <div class="stats-grid">
        <div class="stat-item">
          <span class="stat-value">3+</span>
          <span class="stat-label">Years Learning</span>
        </div>
        <div class="stat-item">
          <span class="stat-value">10+</span>
          <span class="stat-label">Projects Completed</span>
        </div>
        <div class="stat-item">
          <span class="stat-value">5+</span>
          <span class="stat-label">Technologies Mastered</span>
        </div>
        <div class="stat-item">
          <span class="stat-value">âˆž</span>
          <span class="stat-label">Curiosity & Drive</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Divider -->
  <div class="section-divider"></div>

  <!-- Services Section -->
  <div class="services-block">
    <div class="services-header">
      <span class="section-label">(Services)</span>
      <h3 class="services-title">What I Do</h3>
    </div>

    <div class="services-grid">
      {
        services.map((service, index) => (
          <article 
            class="service-card"
            style={`--card-delay: ${index * 0.15}s`}
          >
            <span class="service-number">({service.number})</span>
            <h4 class="service-title">{service.title}</h4>
            <p class="service-description">{service.description}</p>
            <ul class="service-highlights">
              {service.highlights.map((highlight) => (
                <li class="highlight-item">{highlight}</li>
              ))}
            </ul>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .about-section {
    padding-top: 8rem;
    padding-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-accent);
    margin-bottom: 1.5rem;
  }

  /* Introduction Block */
  .intro-block {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    margin-bottom: 6rem;
  }

  @media (min-width: 1024px) {
    .intro-block {
      grid-template-columns: 1.2fr 1fr;
      align-items: start;
    }
  }

  .intro-heading {
    font-size: clamp(3rem, 7vw, 5rem);
    font-weight: 700;
    line-height: 1.05;
    color: white;
    margin-bottom: 2rem;
  }

  .accent-text {
    color: var(--color-accent);
  }

  .intro-text {
    font-size: 1.25rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1.5rem;
    max-width: 36rem;
  }

  .intro-text-secondary {
    font-size: 1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.7);
    max-width: 36rem;
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .stat-item {
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: 1.25rem;
    padding: 1.75rem;
    text-align: center;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .stat-item:hover {
    transform: translateY(-4px);
    border-color: rgba(255, 233, 177, 0.3);
  }

  .stat-value {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-accent);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.6);
  }

  /* Divider */
  .section-divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.15) 20%,
      rgba(255, 255, 255, 0.15) 80%,
      transparent
    );
    margin: 4rem 0;
  }

  /* Services Block */
  .services-block {
    margin-top: 2rem;
  }

  .services-header {
    margin-bottom: 3rem;
  }

  .services-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: white;
    margin: 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: 1.5rem;
    padding: 2rem;
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    animation: fadeSlideUp 0.6s ease-out both;
    animation-delay: var(--card-delay);
  }

  .service-card:hover {
    transform: translateY(-6px);
    border-color: rgba(255, 233, 177, 0.25);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
  }

  .service-number {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
    font-family: "IBM Plex Mono", monospace;
  }

  .service-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: white;
    margin-bottom: 1rem;
  }

  .service-description {
    font-size: 1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.75);
    margin-bottom: 1.5rem;
  }

  .service-highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .highlight-item {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 0.8rem;
    background: rgba(255, 233, 177, 0.08);
    border: 1px solid rgba(255, 233, 177, 0.15);
    border-radius: 2rem;
    font-size: 0.8rem;
    color: var(--color-accent);
    transition: background 0.2s ease;
  }

  .highlight-item:hover {
    background: rgba(255, 233, 177, 0.15);
  }

  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .about-section {
      padding-top: 5rem;
      padding-bottom: 3rem;
    }

    .intro-block {
      gap: 3rem;
      margin-bottom: 4rem;
    }

    .stats-grid {
      gap: 1rem;
    }

    .stat-item {
      padding: 1.25rem;
    }

    .stat-value {
      font-size: 2rem;
    }

    .services-grid {
      gap: 1.5rem;
    }

    .service-card {
      padding: 1.5rem;
    }
  }
</style>
