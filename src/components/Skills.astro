---
interface SkillCategory {
  title: string;
  skills: string[];
}

const skillCategories: SkillCategory[] = [
  {
    title: "Languages",
    skills: ["Java", "Python", "TypeScript", "Go", "C / C++", "SQL"],
  },
  {
    title: "Frameworks & APIs",
    skills: ["Vue", "Node.js / Express", "SpringBoot", "Django", "FastAPI", "REST / GraphQL", "gRPC"],
  },
  {
    title: "Cloud & DevOps",
    skills: ["GCP", "Docker", "Kubernetes", "Terraform", "GitHub Actions", "CI/CD"],
  },
  {
    title: "Databases",
    skills: ["PostgreSQL", "MongoDB", "Redis", "Firestore", "SQLite"],
  },
  {
    title: "Data & ML",
    skills: ["Pandas/NumPy", "XGBoost", "Optuna", "Tensorflow"],
  },
  {
    title: "Practices",
    skills: ["TDD", "Clean Architecture", "Microservices", "Agile/Scrum"],
  },
];
---

<section id="skills" class="section-container skills-section">
  <div class="skills-header">
    <span class="section-label">(Skills)</span>
    <h2 class="section-title">Tools & Technologies</h2>
    <p class="section-subtitle">
      Technologies I work with daily to build robust, scalable applications
    </p>
  </div>

  <div class="skills-grid">
    {
      skillCategories.map((category, index) => (
        <div 
          class="skill-card"
          style={`--delay: ${index * 0.1}s`}
        >
          <h3 class="skill-category-title">{category.title}</h3>
          <ul class="skill-list">
            {category.skills.map((skill) => (
              <li class="skill-item">{skill}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>

<style>
  .skills-section {
    position: relative;
    padding-top: 6rem;
    padding-bottom: 6rem;
  }

  .skills-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-accent);
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
    line-height: 1.1;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.7);
    max-width: 32rem;
    margin: 0 auto;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .skill-card {
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: 1.25rem;
    padding: 1.75rem;
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    animation: fadeSlideUp 0.6s ease-out both;
    animation-delay: var(--delay);
  }

  .skill-card:hover {
    transform: translateY(-4px);
    border-color: rgba(255, 233, 177, 0.3);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .skill-category-title {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: 1.25rem;
    font-weight: 600;
  }

  .skill-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-item {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 0.875rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 2rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.9);
    transition: background 0.2s ease, border-color 0.2s ease;
  }

  .skill-item:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.15);
  }

  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .skills-section {
      padding-top: 4rem;
      padding-bottom: 4rem;
    }

    .skills-header {
      margin-bottom: 3rem;
    }

    .skill-card {
      padding: 1.5rem;
    }
  }
</style>

