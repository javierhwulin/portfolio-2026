<footer class="max-w-7xl mx-auto my-20 px-6 md:px-12">
  <div class="glass rounded-3xl p-10 md:p-14">
    <div class="flex flex-col items-center text-center gap-3">
      <p class="text-white/80 text-sm tracking-wider uppercase">
        Local time â€” Madrid
      </p>
      <p
        id="local-time"
        class="font-mono tabular-nums text-4xl md:text-6xl text-white"
      >
        --:--
      </p>
      <p id="local-date" class="text-white/70 text-sm">-- --, ----</p>
    </div>
  </div>

  <script>
    const timeEl = document.getElementById("local-time");
    const dateEl = document.getElementById("local-date");
    const timeFmt = new Intl.DateTimeFormat("en-GB", {
      hour: "2-digit",
      minute: "2-digit",
      hour12: false,
      timeZone: "Europe/Madrid",
    });
    const dateFmt = new Intl.DateTimeFormat("en-GB", {
      weekday: "short",
      year: "numeric",
      month: "short",
      day: "2-digit",
      timeZone: "Europe/Madrid",
    });
    function updateTime() {
      if (!timeEl || !dateEl) return;
      const now = new Date();
      timeEl.textContent = timeFmt.format(now);
      dateEl.textContent = dateFmt.format(now);
    }
    updateTime();
    setInterval(updateTime, 60 * 1000);
  </script>

  <style>
    .tabular-nums {
      font-variant-numeric: tabular-nums;
    }
  </style>
</footer>
